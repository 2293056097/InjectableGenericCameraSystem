<Window x:Class="IGCSClient.Forms.ProcessSelectorWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IGCSClient.Forms"
			 xmlns:ui="http://schemas.modernwpf.com/2019"
			 ui:ThemeManager.IsThemeAware="True"
			 ui:WindowHelper.UseModernWindowStyle="True"
             Title="Please select the process to inject the dll into"
             mc:Ignorable="d" Height="439" Width="602" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" Loaded="ProcessSelectorWPF_OnLoaded">
	<Grid>
		<DataGrid Margin="0,0,0,52" Name="_processGrid">
		</DataGrid>
		<Button VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Name="_refreshButton" Click="_refreshButton_Click">Refresh</Button>
		<Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,74,10" Name="_selectButton" Click="_selectButton_Click">Select</Button>
		<Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Name="_cancelButton" Click="_cancelButton_Click">Cancel</Button>
	</Grid>
</Window>
